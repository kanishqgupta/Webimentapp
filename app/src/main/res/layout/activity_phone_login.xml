<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PhoneLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/safe_outs_logo"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/enter_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#2BA7E1"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:textSize="28dp"
            android:text="Enter your Phone no."/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/linear1_layout">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rectangle_1"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                app:ccp_contentColor="@color/black"
                app:ccp_showFlag="true"
                app:ccp_textSize="14sp" />

            <EditText
                android:id="@+id/phone_txt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/maitree"
                android:hint=" Enter phone number "
                android:background="@drawable/rectangle_1"/>
        </LinearLayout>

        <Button
            android:id="@+id/buttonSubPhone"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Generate OTP"
            android:textAllCaps="false"
            android:background="@drawable/button"
            android:textColor="#fff"
            android:layout_marginTop="30dp" />
    </LinearLayout>

</LinearLayout>